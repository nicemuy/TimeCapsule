extends ../layout

block css
	link(href='/css/index.css',rel='stylesheet')
	link(href='/css/admin.css',rel='stylesheet')

block js
	script(type='text/javascript', src='js/bootstrap.file-input.js')
	script(type='text/javascript',src='/js/AdminIndex.js')
	script
		if (window.location.hash == '#_=_')
			window.location.hash = '';

		function CapsuleCheck(){
			var CapsuleImg = document.getElementById('CapsuleImg');
			var CapsuleKind = document.getElementById('cKind');
			var CapsuleSize = document.getElementById('cSize');

			if(!CapsuleKind.value){
				alert("캡슐 이름을 입력해주세요.");
				return false;
			}
			if(!CapsuleSize.value){
				alert("캡슐 용량을 입력해주세요.");
				return false;
			}
			if(CapsuleImg.files.length == 0){
				alert("파일을 첨부해주세요.");
				return false;
			}
			
			$('#addForm').submit();
		}
