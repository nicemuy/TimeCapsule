block row2col2
	form(action='/CapsuleTypeUpload', method='post', id='addForm', enctype='multipart/form-data')
		div#accordion2.accordion
			div.accordion-group
				div.accordion-heading
					a.accordion-toggle( data-toggle='collapse',data-parent='#accordion2', href='#collapse0') 캡슐 종류 추가
				div#collapse0.accordion-body.collapse.in
					div.accordion-inner
						ul
							li
								캡슐 이름
							li
								input(type='text', name='CapsuleKind', id='cKind',placeholder='ex: superCapsule')
							li
								캡슐 용량
							li
								input(type='text', name='CapsuleSize', id='cSize',placeholder='ex: 1mb -> 1, 5GB -> 5000')
							li
								input(type='file', name='imgs', id='CapsuleImg', title="파일을 선택하세요.")
							li
								input.btn(type='button', onclick='CapsuleCheck()', value='묻기');

