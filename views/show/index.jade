extends ../layout

block css
    link(href='/css/show.css',rel='stylesheet')
    link(href='/skin/jplayer.blue.monday.css',rel='stylesheet')

block js
    script(type='text/javascript',src='/js/show.js')
    script(type='text/javascript',src='/js/jquery.jplayer.min.js')

block row2col1
    .show-list
        ul.unstyled.inline.text-center
        ul.unstyled.inline.text-center
        a.arrow-left
            img(src='/img/arrows-left.png',alt='arrows-left')
        a.arrow-right
            img(src='/img/arrows-right.png',alt='arrows-right')
block row2col1row1col1
    .show-list.logos
        a(href='#')
            img(src='/img/facebook-logo.png',alt='facebook')
        a(href='#')
            img(src='/img/twitter-logo.png',alt='twitter')
        a(href='#')
            img(src='/img/google-logo.png',alt='google')

block row2col2
    .bought
        ul.unstyled.text-center
        div.pagination.pagination-mini.pagination-centered
            ul

    #videoModal.modal.hide.fade(tabindex='-1', role='dialog')
        .modal-header
            button.close(type='button',data-dismiss='modal',onclick='pause()') x
            h3#videoModalLabel Test
        .modal-body
            #jp_container_0.jp-video
                .jp-type-single
                    #jquery_jplayer_0.jp-jplayer
                    .jp-gui
                        .jp-video-play
                            a.jp-video-play-icon(href='javascript:;', tabindex='1') play
                        .jp-interface
                            .jp-progress
                                .jp-seek-bar
                                    .jp-play-bar
                            .jp-current-time
                            .jp-duration
                            .jp-controls-holder
                                ul.jp-controls
                                    li
                                        a.jp-play(href='javascript:;', tabindex='1') play
                                    li
                                        a.jp-pause(href='javascript:;', tabindex='1') pause
                                    li
                                        a.jp-stop(href='javascript:;', tabindex='1') stop
                                    li
                                        a.jp-mute(href='javascript:;', tabindex='1', title='mute') mute
                                    li
                                        a.jp-unmute(href='javascript:;', tabindex='1', title='unmute') unmute
                                    li
                                        a.jp-volume-max(href='javascript:;', tabindex='1', title='max volume') max volume
                                .jp-volume-bar
                                    .jp-volume-bar-value
                                ul.jp-toggles
                                    li
                                        a.jp-full-screen(href='javascript:;', tabindex='1', title='full screen') full screen
                                    li
                                        a.jp-restore-screen(href='javascript:;', tabindex='1', title='restore screen') restore screen
                                    li
                                        a.jp-repeat(href='javascript:;', tabindex='1', title='repeat') repeat
                                    li
                                        a.jp-repeat-off(href='javascript:;', tabindex='1', title='repeat off') repeat off
                            .jp-title
                                ul
                                    li Big Buck Bunny Trailer
                    .jp-no-solution
                        span Update Required
                        | To play the media you will need to either update your browser to a recent version or update your
                        a(href='http://get.adobe.com/flashplayer/', target='_blank') Flash plugin
                        | .
        .modal-footer
            button.btn(data-dismiss='modal', aria-hidden='true', value='0',onclick='pause()') Close

    #audioModal.modal.hide.fade(tabindex='-1', role='dialog')
        .modal-header
            button.close(type='button',data-dismiss='modal',onclick='pause()') x
            h3#audioModalLabel Test
        .modal-body
            #jquery_jplayer_1.jp-jplayer
            #jp_container_1.jp-audio
                .jp-type-single
                    .jp-gui.jp-interface
                        ul.jp-controls
                            li
                                a.jp-play(href='javascript:;', tabindex='1') play
                            li
                                a.jp-pause(href='javascript:;', tabindex='1') pause
                            li
                                a.jp-stop(href='javascript:;', tabindex='1') stop
                            li
                                a.jp-mute(href='javascript:;', tabindex='1', title='mute') mute
                            li
                                a.jp-unmute(href='javascript:;', tabindex='1', title='unmute') unmute
                            li
                                a.jp-volume-max(href='javascript:;', tabindex='1', title='max volume') max volume
                        .jp-progress
                            .jp-seek-bar
                                .jp-play-bar
                        .jp-volume-bar
                            .jp-volume-bar-value
                        .jp-time-holder
                            .jp-current-time
                            .jp-duration
                            ul.jp-toggles
                                li
                                    a.jp-repeat(href='javascript:;', tabindex='1', title='repeat') repeat
                                li
                                    a.jp-repeat-off(href='javascript:;', tabindex='1', title='repeat off') repeat off
                    .jp-title
                        ul
                            li Bubble
                    .jp-no-solution
                        span Update Required
                        | To play the media you will need to either update your browser to a recent version or update your
                        a(href='http://get.adobe.com/flashplayer/', target='_blank') Flash plugin
                        | .
        .modal-footer
            button.btn(data-dismiss='modal', aria-hidden='true', value='0',onclick='pause()') Close

    #imageModal.modal.hide.fade(tabindex='-1', role='dialog')
        .modal-header
            button.close(type='button',data-dismiss='modal') x
            h3#imageModalLabel Test
        .modal-body
            img(src='/upload/3.jpg')
        .modal-footer
            button.btn(data-dismiss='modal', aria-hidden='true') Close

    #textModal.modal.hide.fade(tabindex='-1', role='dialog')
        .modal-header
            button.close(type='button',data-dismiss='modal') x
            h3#textModalLabel Test
        .modal-body
            |hihi
        .modal-footer
            button.btn(data-dismiss='modal', aria-hidden='true') Close